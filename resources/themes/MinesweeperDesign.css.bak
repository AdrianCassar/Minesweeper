.combo-box > .list-cell {
    -fx-text-fill: white;
}

.combo-box-popup .list-view .list-cell  {
    -fx-text-fill: white;
    -fx-background-color: #e24c3f;
}

.combo-box-popup .list-view .list-cell:selected  {
    -fx-background-color: #218f50;
}
 
.combo-box-popup .list-view .list-cell:hover  {
    -fx-background-color: #3f60e2;
}

.combo-box-base {
    /*-fx-shadow-highlight-color: -fx-outer-border, -fx-inner-border, white;*/
    -fx-background-insets: 0 0 -1 0, 0, 1, 2;
    -fx-background-radius: 3px, 3px, 2px, 1px;
    -fx-font-size: 16px;
    -fx-background-color: #e24c3f;
}

