.button {
    -fx-border-color: black;
    -fx-text-alignment: center;
    -fx-border-radius: 3px;
    -fx-text-fill: white;
    -fx-background-color: #e24c3f;
}

.label {
    -fx-font-size: 14px;
    -fx-font-weight: bolder;
}

#warning {
    -fx-text-fill: red;
    -fx-font-weight: bold;
}

#label-id {
    -fx-font-size: 14px;
    /*-fx-font-weight: bolder;*/
}

#position {
    -fx-font-size: 20px;
    /*-fx-padding: 10px;*/
    
    -fx-text-fill: #e24c3f;
}

#timer {
    -fx-font-size: 30px;
    -fx-text-alignment: center;
    -fx-border-color: #e24c3f;
    -fx-border-width: 5px;
    -fx-border-style: dashed;
    -fx-border-radius: 10px;
    -fx-padding: 10px;
    
    -fx-text-fill: #e24c3f;
    -fx-background-color: Black;
}

#three {
    -fx-text-fill: Indigo;
}

#four {
    -fx-text-fill: Blue;
}

#five {
    -fx-text-fill: Purple;
}

.dialog-pane {
    -fx-background-color: white;
    -fx-border-color: black;
    -fx-border-width: 2;
}

.dialog-pane .button {
    -fx-background-color: #e24c3f;
    -fx-cursor: hand;
    -fx-border-style: none;
    -fx-text-fill: white;
}

.hyperlink {
    -fx-border-color: transparent;
    -fx-font-size: 13px;
    -fx-text-fill: black;
}

.hyperlink:visited {
    -fx-text-fill: black;
}

.dialog-pane > *.button-bar .button {
    -fx-cursor: hand;
}

.dialog-pane > *.button-bar > *.container {
    -fx-background-color: white;
    -fx-border-color: black;
    -fx-border-width: 2 0 0 0;
}

.dialog-pane > *.label.content {
    -fx-font-size: 14px;
    -fx-font-weight: bold;
}


.dialog-pane:header *.header-panel {
    -fx-background-color: white;
}

.dialog-pane:header *.header-panel *.label {
    -fx-font-size: 18px;
    -fx-text-fill: black;
}

